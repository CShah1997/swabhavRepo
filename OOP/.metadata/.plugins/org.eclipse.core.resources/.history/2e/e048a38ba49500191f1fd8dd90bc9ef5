package com.techlabs.test;

import static org.junit.Assert.*;

import com.techlabs.game.*;

import org.junit.Test;

public class CellTest {

	
	@Test(expected = IncorrectMarkerException.class)
	public void testSetMarkerIfMarkerIsNotEmpty() {
		Cell c2 = new Cell();
		c2.setMarker(Marker.O);
	}
	
	@Test
	public void testGetMarkerIfMarkerIsEqualEmpty() {
		Cell c2 = new Cell();
		Marker m1 = c2.getMarker();
		assertEquals(m1, Marker.EMPTY);
	}
	
}
