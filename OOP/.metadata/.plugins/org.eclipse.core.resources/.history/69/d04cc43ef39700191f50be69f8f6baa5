package com.techlabs.game;

public class Board {
	
	protected static int ROWS=3;
	protected static int COLUMNS=3;
	private int row,column;
		
	Cell cells[][];
	
	
	public Board() {
		cells=new Cell[ROWS][COLUMNS];
		for(int row=0;row<ROWS;row++)
			for(int column=0;column<COLUMNS;column++)
			{
				cells[row][column]=new Cell();
			}
	}


	public void putMarkOnCell(Marker mark,int row,int column)
	{
		if(cells[row][column].equals(Marker.EMPTY))
		{
			cells[row][column].setMarker(mark);
		}
	}
	
	public Marker getMarkOnCell()
	{
		return cells[row][column].getMarker();
	}
	
	
		
}
