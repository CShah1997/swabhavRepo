package com.techlabs.ocp_voilation;

public class FixedDeposit {

	private String account_number;
	private String name;
	private double principle;
	private float period;
	private FestivalType festival;
	
	private static float HOLI_RATE=0.08;
	private static float NEW_YEAR_RATE=0.09;
	private static float NORMAL_RATE=0.07;
	
	public FixedDeposit(String account_number, String name, double principle, float period, FestivalType festival) {
		super();
		this.account_number = account_number;
		this.name = name;
		this.principle = principle;
		this.period = period;
		this.festival = festival;
	}
	
	public double calculateSimpleInterest()
	{
		if(festival==FestivalType.HOLI)
		{
			return principle * HOLI_RATE*period/100;
		}
		
	}
}
